{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="page-width account-template">
  {% render 'account-menu' %}

  <div class="account-template__content">
    <h1 class="account-template__title">{{ 'customer.account.title' | t }}</h1>
    {% comment %}
    {% render 'subscription-account' %}
    {% endcomment %}
    <p class="account-template__text">
      {{ 'customer.account.text' | t }}
    </p>

    <div class="account-template__details">
      <h2 class="account-template__details-title">{{ 'customer.account.details' | t }}</h2>

      <p>{{ customer.email }}</p>
      {% if customer.default_address != blank %}
        {{ customer.default_address | format_address }}
      {% else %}
        <p>{{ 'customer.addresses.empty_addresses' | t }}</p>
      {% endif %}
    </div>
  </div>
</div>
