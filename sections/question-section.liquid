{{ 'section-question.css' | asset_url | stylesheet_tag }}
<noscript>{{ 'section-question.css' | asset_url | stylesheet_tag }}</noscript>

<section class="question-section">
  <div class="container">
    <div class="question-section__content-wrapper">
      {% if section.settings.heading != blank and section.settings.content != blank %}
        <div class="question-section__content">
          {% if section.settings.heading != blank %}
            <h3 class="question-section__title">{{ section.settings.heading }}</h3>
          {% endif %}
          {{ section.settings.content }}
        </div>
      {% endif %}
      <div class="question-section__button-grout">
        {% render 'contact-btn',
          url: section.settings.button_url01,
          text: section.settings.button_text01,
          svg: section.settings.button_svg01
        %}

        {% render 'contact-btn',
          url: section.settings.button_url02,
          text: section.settings.button_text02,
          svg: section.settings.button_svg02
        %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Question section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text01",
      "label": "Button Label"
    },
    {
      "type": "textarea",
      "id": "button_svg01",
      "label": "Button SVG"
    },
    {
      "type": "url",
      "id": "button_url01",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text02",
      "label": "Button Label"
    },
    {
      "type": "textarea",
      "id": "button_svg02",
      "label": "Button SVG"
    },
    {
      "type": "url",
      "id": "button_url02",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
